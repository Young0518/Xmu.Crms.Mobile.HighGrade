
@{
    ViewBag.Title = "TeacherBindingUI";
}

<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0">
    <title>Untitled Document</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/TeacherBindingUI.css" rel="stylesheet" type="text/css">
</head>
<body class="body">
    <div class="PictureDiv">
        <!-- 背景图的div -->
        <img class="bulb" src="../Content/themes/bulb.png" />
        <img src="../Content/themes/background.jpg" class="Picture" />
        <div class="title">请先绑定您的账号</div>
    </div>
    <div class="hrDiv"></div>
    <div class="mainView">
        <div class="teacherID">教工号 :</div>
        <input class="inputteacherID" id="telnum"></input>
        <img class="tipIcon" src="../Content/themes/warning.png
		"></img>
        <div class="tipFont">提交后不能修改</div>
        <div class="Name">姓名 :</div>
        <input class="inputName" id="telname"></input>
        <div class="school">学校 :</div>

        <input class="inputSchool" id="school">
        <A href="javascript:void(0);" onclick="window.location.href='../me/ChooseSchool'">
            <img class="selectSchoolIcon" src="../Content/themes/ninedot.png"></img>
        </A>
        </input>
        <div class="comfirmDiv">
            <button class="confirmButton" onclick="window.location.href='../me/TeacherMainUI'">绑定</button>
        </div>
    </div>
</body>
</html>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var number = $("#telnum").val();
        var name = $("#telname").val();
        var school = $("#school").val();
        $('#submit').click(function(){
            $.ajax({
                type:'PUT',
                url:"/api/me",

                contentType: "application/json; charset=utf-8",
                data:JSON.stringify({
                    number:number,
                    name:name,
                    school:school,
                }),
                async:true,
                dataType:'json',
                success:function(data) {
                    alert("请求成功");
                },
                error:function(){
                }
            });
        })
</script>


