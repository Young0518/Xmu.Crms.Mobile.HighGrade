
@{
    ViewBag.Title = "FixedRollStartCallUI";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0">
    <title>FixedRollStartCallUI</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/RollStartCallUI.css"></link>


</head>
<body>
    <div class="lowBox">
        <!--设置左上角的蓝色板-->
        <div class="blueBoardDiv">
            <img src="../Content/themes/blueBoard.png" class='blueBoardIcon' />
        </div>


        <div id="descri"> </div>
        <!--<div class='classNameDiv'>-->
        <!--班级1-->
        <!--</div>-->
        <!--<div class='studentSumDiv'>-->
        <!--学生总数: 40-->
        <!--</div>-->

        <div class="hrDiv">
        </div>

        <!--已签到的学生以及那个icon,当签到开始及结束时，这个
        部分在中央。当签到开始后结束前，这部分在左边，见.studentNum2。-->
        <!--
           <div class="studentNum">
            <img src="../Content/themes/users.png" class="usersIcon"/>
            已签到学生: 0/40
          </div>
        -->

        <div class="lowBox">
            <!--已签到的学生+icon+签到名单，表示当签到开始后结束前的样子-->
            <div class="studentNum" id="description">
                <!--<img src="../Content/themes/users.png" class="usersIcon2"/>-->
                <!--<span>已签到学生: 0/40</span>-->
            </div>



            <!--下面是button，分为BigBtn和SmallBnt,只有正在签到时
            的 签到名单按钮 是SmallBnt。 当使用greyBigBtn的时候要加
            上提示语。-->
            <div>
                <button id="click" type="button" class="blueBigBtn" onclick="window.location.href='../class/FixedRollEndCallUI'">
                    开始签到
                </button>

                <div>
                    <button type="button" class="greyBigBtn">
                        查看分组
                    </button>
                    <text class="noGroup">
                        随机分组还未开始，不能查看分组
                    </text>
                </div>
            </div>
        </div>
</body>
</html>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type:'GET',
            url:"/api/class/2",
            dataType:"json",
            success:function (data){
                $("#descri").append("" +
                    "<div class='classNameDiv'>"+ data.Data.name+ " </div>"+
                    "<div class='studentSumDiv'> 学生总数: "+ data.Data.numStudent+ "</div>");
                $("#description").append("" +
                    "<img src='../Content/themes/users.png' class='usersIcon2'/>"+
                    "<span>已签到学生:" + data.Data.proportions.presentation+ "</span>");
            }
        });
    })
</script>

